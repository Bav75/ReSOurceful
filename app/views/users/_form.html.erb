
<%# data validation errors if they exist %>
<% if !flash.empty? %>
    <% flash.each do |key, message| %>
        <p><strong><%= "#{message}" %></p></strong>
    <% end %>
<% end %>


<%# partial for @user - user signup and user account detail editing %>
<%= form_for user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <br>
    <br>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <br>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <br>
    <br>

    <%= f.submit "Enter"%>
<% end %>