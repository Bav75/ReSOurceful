
<%# display data validation errors if they exist %>
<%= render 'layouts/validation_errors' %>



<%# partial for @user - user signup and user account detail editing %>
<%= form_for user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <br>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <br>
    <br>

    <%= f.submit "Enter"%>
<% end %>